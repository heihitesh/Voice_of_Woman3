<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curve_shap_back"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Big"
            android:text="Current Location"
            android:gravity="center"
            android:background="@drawable/curve_shap_blue"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitute :-"
        style="@style/Big"
        android:textSize="20dp"
        android:id="@+id/textView7"
        android:gravity="center"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        style="@style/Big"
        android:text="Cant get"
        android:background="@drawable/curve_shap_back"
        android:gravity="center"
        android:textSize="30dp"
        android:id="@+id/etLong"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude :-"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        style="@style/Big"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etetLat"
        android:layout_margin="5dp"
        style="@style/Big"
        android:text="Cant get"
        android:gravity="center"
        android:background="@drawable/curve_shap_back"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/bOpenMap"
        android:layout_below="@+id/etetLat"
        android:background="@drawable/maps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    </RelativeLayout>
    </LinearLayout>
</LinearLayout>